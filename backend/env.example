# Server Configuration
PORT=3000
NODE_ENV=development

# AI Provider Selection
# Использовать локальный MiroMind вместо Claude API
USE_MIROMIND=false  # true для MiroMind, false для Claude

# MiroMind Configuration (если USE_MIROMIND=true)
MIROMIND_API_URL=http://localhost:8000/v1
MIROMIND_MODEL=mirothinker-8b
MIROMIND_API_KEY=not-needed  # Обычно не требуется

# Claude Configuration (если USE_MIROMIND=false или как fallback)
ANTHROPIC_API_KEY=your_api_key_here
# Если ANTHROPIC_API_KEY не установлен, будет использоваться симуляция

# Proxy Configuration (для Claude API через VPN)
# HTTP_PROXY=http://127.0.0.1:12334
# HTTPS_PROXY=http://127.0.0.1:12334
