PORT=3000
FRONTEND_URL=http://localhost:5173
NODE_ENV=development

# Database
DB_PATH=./data/xaker.db

# Shannon integration
SHANNON_PATH=../shannon
ANTHROPIC_API_KEY=your_api_key_here
# Если ANTHROPIC_API_KEY не установлен, будет использоваться симуляция

# Режим симуляции (для тестирования без затрат)
# USE_SIMULATION=true - всегда использовать симуляцию (БЕЗ затрат)
# USE_SIMULATION=false или не установлено - использовать реальный Shannon (с затратами ~$50)
USE_SIMULATION=false

